{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
	"paths": {
      "@/*": [
        "./src/*"
      ],
      "@packages/*": [
        "./packages/*"
      ]
    },
  },
  "include": [
	"vite.config.ts",
	"build.ts",
	"src/**/*.ts",
	"src/**/*.d.ts",
	"src/**/*.tsx",
	"src/**/*.vue",
	"playground/**/*.vue",
	"playground/**/*.ts",
	"packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue", "packages/**/**/*.ts", "packages/**/**/*.d.ts",
   ]
}
